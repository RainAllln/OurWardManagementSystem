<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team.jnu.wardsystem.mapper.DoctorMapper">
    <update id="updatePhone">
        UPDATE doctors
        SET phone = #{phone}
        WHERE doctor_id = #{doctor_id}
    </update>
    <select id="searchDoctorById" resultType="Doctor"> select * from doctors where doctor_id=#{doctor_id}</select>
    <select id="searchDepartmentName" resultType="String"> select department_name from departments where department_id=#{department_id}</select>
</mapper>